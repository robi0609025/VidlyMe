@model IEnumerable<VidlyMe.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@*This will work as well.*@
@*!Model.Any()*@

@{ if (Model.Count() == 0)
    {
        <p>We don't have any customers yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    Customer
                </th>
                <th>
                    Membership Type
                    @*@Html.DisplayNameFor(Model.MembershipType.Name)*@
                </th>
            </tr>
            @foreach (var cust in Model)
            {
                <tr>
                    <td>
                        @* All these three methods are working in same way *@
                        @*<a href="/Customers/Details/@cust.CustomerId">@String.Format("{0}", cust.Name)</a>*@

                        @*@Html.ActionLink(cust.Name,String.Format("/Details/{0}",cust.CustomerId))*@

                        @Html.ActionLink(cust.Name, "Details", "Customers", new { id = cust.CustomerId }, null)
                    </td>
                    <td>
                        @*@cust.MembershipType.DiscountRate%*@
                        @cust.MembershipType.Name
                    </td>
                </tr>

            }

        </table>
    }
}

